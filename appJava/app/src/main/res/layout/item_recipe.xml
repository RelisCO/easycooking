<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_to_item_recipe"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/shape_to_button"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/txt_to_item_recipe"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_to_item_recipe"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#000"
        android:text="Блюдо" />
    <TextView
        android:id="@+id/txt_to_item_recipe_time"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_to_item_recipe"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#808080"
        android:text="Время" />
    <TextView
        android:id="@+id/txt_to_item_recipe_calories"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_to_item_recipe_time"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#808080"
        android:text="Калорий:" />


</RelativeLayout>